        </node>

        <node id="table-legs">  
            <material id="null" />
            <texture id="wood">
                <amplification afs="1" aft="1" />
            </texture>
            <transformations>
                <translation x="0" y="-8" z="0"/>
                <rotation axis="x" angle="-90"/>
            </transformations>

            <descendants>
                <noderef id="table-leg1"/>
                <noderef id="table-leg2"/>
                <noderef id="table-leg3"/>
                <noderef id="table-leg4"/>
            </descendants>
        </node>

        <node id="table-leg1">  
            <material id="null" />
            <texture id="wood">
                <amplification afs="1" aft="1" />
            </texture>
            <transformations>
                <translation x="-4" y="-4" z="0"/>
            </transformations>

            <descendants>
                <leaf type="cylinder" height="7" topRadius=".3" bottomRadius=".3" stacks="36" slices="36"/>
            </descendants>
        </node>

        <node id="table-leg2">  
            <material id="null" />
