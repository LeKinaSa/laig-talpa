        <node id="board-limits">  
            <material id="null" />
            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>
            <transformations>
            </transformations>

            <descendants>
                <noderef id="red-top"/>
                <noderef id="red-bottom"/>
                <noderef id="blue-left"/>
                <noderef id="blue-right"/>
            </descendants>
        </node>

        <node id="red-top">
            <material id="redPieceMaterial" />
            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>
            <transformations>
                <translation x="0" y="-0.0005" z="4.25"/>
                <rotation axis="x" angle="-90"/>
                <rotation axis="z" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.25" y1="-4" x2="0.25" y2="4"/>
            </descendants>
        </node>

        <node id="red-bottom">
            <material id="redPieceMaterial" />
            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>
            <transformations>
                <translation x="0" y="-0.0005" z="-4.25"/>
                <rotation axis="x" angle="-90"/>
                <rotation axis="z" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.25" y1="-4" x2="0.25" y2="4"/>
            </descendants>
        </node>

        <node id="blue-left">
            <material id="bluePieceMaterial" />
            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>
            <transformations>
                <translation x="-4.25" y="-0.0005" z="0"/>
                <rotation axis="x" angle="-90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.25" y1="-4" x2="0.25" y2="4"/>
