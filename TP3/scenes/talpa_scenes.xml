<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="living-room" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="0" y="20" z="10" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="demoLight">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <texture id="wood" path="./scenes/images/wood.jpg" />
    </textures>

    <!-- spritesheets -->
    <!-- o bloco "spritesheets" deve ser declarado -->
    <!-- imediatamente após o bloco "textures" -->
    <spritesheets>
            <!-- Semelhante à declaração de textura,  -->
            <!-- mas inclui a definição do nº de colunas e linhas -->
            <spritesheet id="test" path="./scenes/images/texture.jpg" sizeM="10" sizeN="10" />
    </spritesheets>

    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="demoMaterial">
            <shininess value="30" />
            <ambient  r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse  r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="demoMaterial2">
            <shininess value="30" />
            <ambient  r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse  r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <emissive r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="bluePieceMaterial">
            <shininess value="30" />
            <ambient  r="0.0" g="0.0" b="0.2" a="1.0" />
            <diffuse  r="0.0" g="0.0" b="0.6" a="1.0" />
            <specular r="0.0" g="0.0" b="0.8" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="redPieceMaterial">
            <shininess value="10" />
            <ambient  r="0.2" g="0.0" b="0.0" a="1.0" />
            <diffuse  r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.8" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <!--informacao de animacao -->
    <!-- o bloco "animations" é opcional, mas quando existir -->
    <!-- deve ser declarado imediatamente antes do bloco  "nodes" -->
    <animations>
    </animations>

    <nodes>
        <node id="living-room">
            <material id="demoMaterial" />
            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>
            <transformations>
            </transformations>
            <descendants>
                <noderef id="structure" />
                <noderef id="table"/>
            </descendants>
        </node>

        <node id="structure">  
            <material id="null" />
            <texture id="null">
                <amplification afs="10" aft="10" />
            </texture>
            <transformations>
            </transformations>

            <descendants>
               <noderef id="wall1"/>
               <noderef id="wall2"/>
               <noderef id="wall3"/>
               <noderef id="wall4"/>
               <noderef id="floor"/>
               <noderef id="ceiling"/>
            </descendants>
        </node>

        <node id="wall1">  
            <material id="null" />
            <texture id="null">
                <amplification afs="10" aft="10" />
            </texture>
            <transformations>
                <translation x="0" y="0" z="-10"/>
            </transformations>

            <descendants>
                <!-- <leaf type="rectangle" x1="-5" y1="-5" x2="5" y2="5"/> -->
            </descendants>
        </node>   

        <node id="wall2">  
            <material id="null" />
            <texture id="null">
                <amplification afs="10" aft="10" />
            </texture>
            <transformations>
            </transformations>

            <descendants>
            </descendants>
        </node>  

        <node id="wall3">  
            <material id="null" />
            <texture id="null">
                <amplification afs="10" aft="10" />
            </texture>
            <transformations>
            </transformations>

            <descendants>
            </descendants>
        </node> 

        <node id="wall4">  
            <material id="null" />
            <texture id="null">
                <amplification afs="10" aft="10" />
            </texture>
            <transformations>
            </transformations>

            <descendants>
            </descendants>
        </node> 

        <node id="floor">  
            <material id="null" />
            <texture id="null">
                <amplification afs="10" aft="10" />
            </texture>
            <transformations>
            </transformations>

            <descendants>
            </descendants>
        </node> 

        <node id="ceiling">  
            <material id="null" />
            <texture id="null">
                <amplification afs="10" aft="10" />
            </texture>
            <transformations>
            </transformations>

            <descendants>
            </descendants>
        </node>  

        <node id="table">  
            <material id="null" />
            <texture id="null">
                <amplification afs="10" aft="10" />
            </texture>
            <transformations>
            </transformations>

            <descendants>
                <noderef id="table-top"/>
                <noderef id="table-side1"/>
                <noderef id="table-side2"/>
                <noderef id="table-side3"/>
                <noderef id="table-side4"/>
                <noderef id="table-bottom"/>
                <noderef id="table-legs"/>

                <noderef id="board-limits"/>                
            </descendants>
        </node>

        <node id="table-top">  
            <material id="null" />
            <texture id="wood">
                <amplification afs="10" aft="10" />
            </texture>
            <transformations>
                <translation x="0" y="-0.001" z="0"/>
                <rotation axis="x" angle="-90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-5" y1="-5" x2="5" y2="5"/>
            </descendants>
        </node>

        <node id="table-side1">  
            <material id="null" />
            <texture id="wood">
                <amplification afs="10" aft="1" />
            </texture>
            <transformations>
                <translation x="0" y="-0.5" z="5"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-5" y1="-0.5" x2="5" y2="0.5"/>
            </descendants>
        </node>

        <node id="table-side2">  
            <material id="null" />
            <texture id="wood">
                <amplification afs="10" aft="1" />
            </texture>
            <transformations>
                <translation x="5" y="-0.5" z="0"/>
                <rotation axis="y" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-5" y1="-0.5" x2="5" y2="0.5"/>
            </descendants>
        </node>

        <node id="table-side3">  
            <material id="null" />
            <texture id="wood">
                <amplification afs="10" aft="1" />
            </texture>
            <transformations>
