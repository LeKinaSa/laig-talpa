            </texture>
            <transformations>
                <translation x="0" y="-0.5" z="-5"/>
                <rotation axis="y" angle="-180"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-5" y1="-0.5" x2="5" y2="0.5"/>
            </descendants>
        </node>

        <node id="table-bottom">  
            <material id="null" />
