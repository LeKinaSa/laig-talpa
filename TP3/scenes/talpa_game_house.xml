    <initials>
        <reference length="2" />
        <root id="scenario" />
    </initials>

    <views default="global">
        <perspective id="player1Camera" near="0.1" far="500" angle="45">
            <from x="0" y="20" z="10" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="player2Camera" near="0.1" far="500" angle="45">
            <from x="0" y="20" z="-10" />
            <to x="0" y="-2" z="0" />
        </perspective>        
        <perspective id="global" near="0.1" far="500" angle="45">
            <from x="0" y="60" z="60" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="boardCamera" near="0.1" far="500" angle="45">
            <from x="10" y="20" z="0" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <illumination>
        <ambient    r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.1" g="0.7" b="1.0" a="1.0" />
    </illumination>

    <lights>
        <light id="demoLight">
            <enable value="1" />
            <position x="10"  y="12"  z="9.5" w="1.0" />
            <ambient  r="0.0" g="0.0" b="0.0" a="1.0" />                 
            <diffuse  r="1.0" g="1.0" b="1.0" a="1.0" /> 
            <specular r="1.0" g="1.0" b="1.0" a="1.0" /> 
