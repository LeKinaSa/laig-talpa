<lsf>
    <initials>
        <reference length="2" />    <!-- axis length; "0" means no axis displayed -->
        <root id="rootNode" />      <!-- identifier of root node of the scene graph; this node -->
                                    <!-- must be defined in one of the following NODE declarations -->
    </initials>

    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" />    <!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        <!-- background color -->
    </illumination>

    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="mainLight">                              <!-- light identifier -->
            <enable value="1" />                            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" />      <!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />           <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />     <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />    <!-- specular component -->
        </light>

        <light id="secondaryLight">                              <!-- light identifier -->
            <enable value="1" />                            <!-- enable/disable -->
            <position x="20" y="12" z="9.5" w="1.0" />      <!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />           <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />     <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />    <!-- specular component -->
        </light>
    </lights>

    <!-- Textures -->
    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->

        <!-- Tie Fighter Textures-->
        <texture id="tieGreyTexture" path="images/tieGrey.jpg" />
        <texture id="tieWindowsTexture" path="images/tieWings.jpg" /> <!-- Temporary -->
        <texture id="tieWingTexture" path="images/tieWings.jpg" />

        <!-- X-Wing Textures -->
        <texture id="xWingFullTexture" path="images/tieGrey.jpg" />
        <texture id="xWingCabineTexture" path="images/metal_gray1.jpg" />
        <texture id="xWingWingMotorDefaultTexture" path="images/metal_gray2.jpg" />
        <texture id="xWingWingGunDefaultAttachedBigPartTexture" path="images/metal_gray1.jpg" />

        <!-- Explosion Textures -->
        <texture id="explosionWhiteTexture" path="images/explosionWhite.jpg" />
        <texture id="explosionTexture" path="images/explosion.jpg" />

        <!-- Sky Box Textures -->
        <texture id="spaceTop" path="images/spaceTop.jpg" />
        <texture id="spaceBottom" path="images/spaceBottom.jpg" />
        <texture id="spaceNorth" path="images/spaceNorth.jpg" />
        <texture id="spaceSouth" path="images/spaceSouth.jpg" />
        <texture id="spaceEast" path="images/spaceEast.jpg" />
        <texture id="spaceWest" path="images/spaceWest.jpg" />
        
    </textures>

    <!-- Materials -->
    <!-- Valores entre 0 e 1 exceto emissive -->
    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="tieGreyMaterial">
            <shininess value="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        
        <material id="tieWindowsMaterial">
            <shininess value="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        
        <material id="tieWingMaterial">
            <shininess value="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="xWingBackBodyMotorDefaultMaterial">
            <shininess value="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="xWingWingGunDefaultBarrelMaterial">
            <shininess value="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="explosionMaterial">
            <shininess value="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
            <emissive r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="laserMaterial">
            <shininess value="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.1" g="1.0" b="0.1" a="1.0" />
            <specular r="0.4" g="0.4" b="0.4" a="0.4" />
            <emissive r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        
        <material id="skyBoxMaterial">
            <shininess value="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.1" g="1.0" b="0.1" a="1.0" />
            <specular r="0.4" g="0.4" b="0.4" a="0.4" />
            <emissive r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

    </materials>

    <nodes>
        <node id="rootNode">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="null" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->

            <texture id="null"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="1.0" aft="1.0" /><!-- for primitives = dx/afs, dy/aft -->
            </texture>

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
            <transformations>
            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <noderef id="xWingParallelepipedDefault" />
            </descendants>
        </node>

        <!-- X-Wing "Rectangle" Default (1 x 1) -->
        <node id="xWingRectangleDefault">
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <!-- X-Wing Parallelepiped Default section -->
        <node id="xWingRectangleBase2">
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="1" z="0" />
                <rotation axis="x" angle="90" />
            </transformations>

            <descendants>
                <noderef id="xWingRectangleDefault" />
            </descendants>
        </node>

        <node id="xWingRectangleBase1">
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="x" angle="90" />
            </transformations>

            <descendants>
                <noderef id="xWingRectangleDefault" />
            </descendants>
        </node>

        <node id="xWingRectangleSideFace4">
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="y" angle="-90" />
            </transformations>

            <descendants>
                <noderef id="xWingRectangleDefault" />
            </descendants>
        </node>

        <node id="xWingRectangleSideFace3">
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="1" />
            </transformations>

            <descendants>
                <noderef id="xWingRectangleDefault" />
            </descendants>
        </node>

        <node id="xWingRectangleSideFace2">
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="y" angle="90" />
                <translation x="1" y="0" z="1" />
            </transformations>

            <descendants>
                <noderef id="xWingRectangleDefault" />
            </descendants>
        </node>

        <node id="xWingRectangleSideFace1">
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="y" angle="180" />
                <translation x="1" y="0" z="0" />
            </transformations>

            <descendants>
                <noderef id="xWingRectangleDefault" />
            </descendants>
        </node>

        <!-- Parallelepiped Default (1 x 1 x 1) -->
        <node id="xWingParallelepipedDefault">
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="xWingRectangleSideFace1" />
                <noderef id="xWingRectangleSideFace2" />
                <noderef id="xWingRectangleSideFace3" />
                <noderef id="xWingRectangleSideFace4" />
                <noderef id="xWingRectangleBase1" />
                <noderef id="xWingRectangleBase2" />
            </descendants>
        </node>

    </nodes>
</lsf>