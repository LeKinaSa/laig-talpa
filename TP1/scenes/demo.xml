            </texture>

            <transformations>

                <translation x="-2" y="0" z="0" />
                <rotation axis="z" angle="-30" />
                <rotation axis="y" angle="90" />

            </transformations>

            <descendants>

                <leaf type="rectangle" x1="0" y1="0" x2="4" y2="2" />

