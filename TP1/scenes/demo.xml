            <texture id="leavesTexture">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="0" y="0" z="1.5" />
                <rotation axis="z" angle="-90" />
                <rotation axis="x" angle="90" />
                <scale sx="2.5" sy="2.5" sz="2.5" />

            </transformations>

            <descendants>

                <noderef id="leaf1"/>
                <noderef id="leaf2"/>

            </descendants>

        </node>   
        
        <node id="leaf1">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <rotation axis="y" angle="-90" />

            </transformations>

            <descendants>

                <leaf type="triangle" x1="-0.5" y1="0" x2="0" y2="1.118" x3="0.5" y3="0" /> <!-- TODO: -->

            </descendants>

        </node>    

        <node id="leaf2">

            <!-- next two lines are mandatory -->
