            </descendants>

        </node>

        <node id="log">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="logTexture">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <!-- TODO: -->

            </transformations>

            <descendants>

                <leaf type="cylinder" height="2" topRadius="0.5" bottomRadius="0.5" stacks="32" slices="32"/>

            </descendants>

        </node>

        <node id="leaves">

            <!-- next two lines are mandatory -->
