<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="root" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.0" g="0.0" b="0.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="demoLight">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="logTexture"         path="./scenes/images/log.jpg" />
        <texture id="forestFloorTexture" path="./scenes/images/moss.jpg" />
        <texture id="rocksTexture"       path="./scenes/images/rocks.jpg" />
        <texture id="coalTexture"        path="./scenes/images/coal.jpg" />
        <texture id="leavesTexture"      path="./scenes/images/leaves.jpg" />
    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="flamesMaterial">
            <shininess value="30" />
            <ambient  r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse  r="0.7" g="0.4" b="0.0" a="1.0" />
            <specular r="0.7" g="0.7" b="0.0" a="1.0" />
            <emissive r="0.3" g="0.3" b="0.0" a="1.0" />
        </material>
        <material id="tentMaterial">
            <shininess value="10" />
            <ambient  r="0.6" g="0.3" b="0.0" a="1.0" />
            <diffuse  r="1.0" g="0.8" b="0.6" a="1.0" />
            <specular r="1.0" g="0.8" b="0.6" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="rocksMaterial">
            <shininess value="1" />
            <ambient  r="0.6" g="0.6" b="0.6" a="1.0" />
            <diffuse  r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <nodes>
        <node id="root">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="forestFloorTexture">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

            </transformations>

            <descendants>

                <noderef id="bonfire" />
                <noderef id="side_log"/>
                <noderef id="tent"/>
                <noderef id="trees"/>

                <noderef id="ground" /> <!-- TODO: -->

            </descendants>

        </node>

        <node id="ground">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="forestFloorTexture">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>
                <rotation axis="x" angle="-90" />
            </transformations>

            <descendants>

                <leaf type="rectangle" x1="-5" y1="-5" x2="5" y2="5" />

            </descendants>

        </node>

        <node id="bonfire">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <!-- the bonfire will be in the center of the scene -->

            </transformations>

            <descendants>

                <noderef id="coal1"/>
                <noderef id="coal2"/>

                <noderef id="flames"/>

                <noderef id="rocks" /> <!-- TODO: -->

            </descendants>

        </node>

        <node id="rocks">

            <!-- next two lines are mandatory -->
            <material id="rocksMaterial" />

            <texture id="rocksTexture">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>
                <translation x="0" y="0.1" z="0" />
                <rotation axis="x" angle="-90" />
            </transformations>

            <descendants>

                <leaf type="torus" inner="0.2" outer="1" slices="32" loops="32" /> <!-- TODO: -->

            </descendants>

        </node>

        <node id="coal1">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="coalTexture">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="-0.5" y="0.1" z="0.1" />

            </transformations>

            <descendants>

                 <leaf type="sphere" radius="0.3" slices="32" stacks="32"/> <!-- TODO: -->

            </descendants>

        </node>

        <node id="coal2">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="coalTexture">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="0.2" y="0.1" z="-0.3" />

            </transformations>

            <descendants>

                 <leaf type="sphere" radius="0.3" slices="32" stacks="32"/> <!-- TODO: -->

            </descendants>

        </node>

        <node id="flames">

            <!-- next two lines are mandatory -->
            <material id="flamesMaterial" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <!-- TODO: -->

            </transformations>

            <descendants>

                <noderef id="flame1"/>
                <noderef id="flame2"/>
                <noderef id="flame3"/>
                <noderef id="flame4"/>

            </descendants>

        </node>

        <node id="flame1">

            <!-- next two lines are mandatory -->
            <!-- TODO:-->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <!-- TODO: -->
                <translation x="-0.5" y="0.3" z="0.1" />
                <rotation axis="y" angle="-90" />

            </transformations>

            <descendants>

                 <leaf type="triangle" x1="-0.5" y1="0" x2="0" y2="1.118" x3="0.5" y3="0" /> <!-- TODO: -->

            </descendants>

        </node>

        <node id="flame2">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="-0.5" y="0.3" z="0.1" />

            </transformations>

            <descendants>

                <leaf type="triangle" x1="-0.5" y1="0" x2="0" y2="1.118" x3="0.5" y3="0" /> <!-- TODO: -->

            </descendants>

        </node>

        <node id="flame3">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="0.2" y="0.1" z="-0.3" />
                <rotation axis="y" angle="-90" />

            </transformations>

            <descendants>

                 <leaf type="triangle" x1="-0.5" y1="0" x2="0" y2="1.118" x3="0.5" y3="0" /> <!-- TODO: -->

            </descendants>

        </node>

        <node id="flame4">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="0.2" y="0.1" z="-0.3" />

            </transformations>

            <descendants>

                 <leaf type="triangle" x1="-0.5" y1="0" x2="0" y2="1.118" x3="0.5" y3="0" /> <!-- TODO: -->

            </descendants>

        </node>

        <node id="side_log">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="logTexture">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="-1.5" y="0.35" z="1.5" />
                <rotation axis="y" angle="-30" />
                <rotation axis="z" angle="90" />
                <rotation axis="x" angle="90" />

            </transformations>

            <descendants>

                <leaf type="cylinder" height="2" topRadius="0.5" bottomRadius="0.5" stacks="32" slices="32"/> <!-- TODO: -->

            </descendants>

        </node>

        <node id="tent">

            <!-- next two lines are mandatory -->
            <material id="tentMaterial" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="3.5" y="0" z="4"/>
                <rotation axis="y" angle="-20" />

            </transformations>

            <descendants>

                <noderef id="frontTent"/>
                <noderef id="backTent"/>
                <noderef id="leftTent"/>
                <noderef id="rightTent"/>
                <noderef id="bottomTent"/>

            </descendants>

        </node>

        <node id="frontTent">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

            </transformations>

            <descendants>

                <leaf type="triangle" x1="-2" y1="0" x2="-1" y2="1.73" x3="0" y3="0" />

            </descendants>

        </node>

        <node id="backTent">

