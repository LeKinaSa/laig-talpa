                <rotation axis="y" angle="90" />

            </transformations>

            <descendants>

                <leaf type="rectangle" x1="0" y1="0" x2="4" y2="2" />

            </descendants>

        </node>

        <node id="trees">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <!-- TODO: -->

            </transformations>

            <descendants>

                <noderef id="tree1"/>
                <noderef id="tree2"/>
                <noderef id="tree3"/>
                <noderef id="tree4"/>

            </descendants>

        </node>

        <node id="tree1">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="3" y="0" z="-3" />
                <rotation axis="x" angle="-90" />

            </transformations>

            <descendants>

                <noderef id="log"/>
                <noderef id="leaves"/>

            </descendants>

        </node>

        <node id="tree2">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="2" y="0" z="-1" />
                <rotation axis="x" angle="-90" />

            </transformations>

            <descendants>

                <noderef id="log"/>
                <noderef id="leaves"/>

            </descendants>

        </node> 

        <node id="tree3">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="-3" y="0" z="2" />
                <rotation axis="x" angle="-90" />

            </transformations>

            <descendants>

                <noderef id="log"/>
                <noderef id="leaves"/>

            </descendants>

        </node>

        <node id="tree4">

            <!-- next two lines are mandatory -->
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>

                <translation x="-2" y="0" z="-3" />
                <rotation axis="x" angle="-90" />

            </transformations>

            <descendants>

                <noderef id="log"/>
